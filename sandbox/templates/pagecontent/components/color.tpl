<article id="component-colors" class="sandbox-block">
    <header>
        <h2>{@sandbox.component.color} {@H|sandbox.pinned.bbcode}</h2>
    </header>
    <p>
        {@H|sandbox.component.color.description}
    </p>
    <p>
        <h6>{@sandbox.component.color.text}</h6>
        <span class="pinned notice">notice</span>
        <span class="pinned question">question</span>
        <span class="pinned success">success</span>
        <span class="pinned warning">warning</span>
        <span class="pinned error">error</span>
        <span class="pinned administrator">administrator</span>
        <span class="pinned moderator">moderator</span>
        <span class="pinned member">member</span>
        <span class="pinned visitor">visitor</span>
        <span class="pinned custom-author">custom-author</span>
        <span class="pinned link-color">link-color</span>
        <span class="pinned link-color-alt">link-color-alt</span>
        <span class="pinned logo-color">logo-color</span>
    </p>
    <p>
        <h6>{@sandbox.component.color.bgc}</h6>
        <span class="pinned bgc notice">notice</span>
        <span class="pinned bgc question">question</span>
        <span class="pinned bgc success">success</span>
        <span class="pinned bgc warning">warning</span>
        <span class="pinned bgc error">error</span>
        <span class="pinned bgc administrator">administrator</span>
        <span class="pinned bgc moderator">moderator</span>
        <span class="pinned bgc member">member</span>
        <span class="pinned bgc visitor">visitor</span>
        <span class="pinned bgc custom-author">custom-author</span>
        <span class="pinned bgc link-color">link-color</span>
        <span class="pinned bgc link-color-alt">link-color-alt</span>
        <span class="pinned bgc logo-color">logo-color</span>

    </p>
    <p>
        <h6>{@sandbox.component.color.bgc.full}</h6>
        <span class="pinned bgc-full notice">notice</span>
        <span class="pinned bgc-full question">question</span>
        <span class="pinned bgc-full success">success</span>
        <span class="pinned bgc-full warning">warning</span>
        <span class="pinned bgc-full error">error</span>
        <span class="pinned bgc-full administrator">administrator</span>
        <span class="pinned bgc-full moderator">moderator</span>
        <span class="pinned bgc-full member">member</span>
        <span class="pinned bgc-full visitor">visitor</span>
        <span class="pinned bgc-full custom-author">custom-author</span>
        <span class="pinned bgc-full link-color">link-color</span>
        <span class="pinned bgc-full link-color-alt">link-color-alt</span>
        <span class="pinned bgc-full logo-color">logo-color</span>
    </p>
    <!-- Source code -->
    <div class="formatter-container formatter-hide no-js">
        <span class="formatter-title title-perso">{@sandbox.source.code} :</span>
        <div class="formatter-content formatter-code">
            <div class="no-style">
<pre class="precode"><code>&lt;span class="... notice">lorem ipsum&lt;/span>
&lt;span class="... bgc notice">lorem ipsum&lt;/span>
&lt;span class="... bgc-full notice">lorem ipsum&lt;/span></code></pre>
            </div>
        </div>
    </div>
</article>
